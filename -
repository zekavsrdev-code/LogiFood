components:
  schemas:
    Category:
      type: object
      description: Kategori Serializer
      properties:
        id:
          type: integer
          readOnly: true
        name:
          type: string
          title: Kategori Adı
          maxLength: 100
        slug:
          type: string
          maxLength: 50
          pattern: ^[-a-zA-Z0-9_]+$
        description:
          type: string
          nullable: true
          title: Açıklama
        parent:
          type: integer
          nullable: true
          title: Üst Kategori
        children:
          type: string
          readOnly: true
        is_active:
          type: boolean
      required:
      - children
      - id
      - name
      - slug
    ChangePasswordRequest:
      type: object
      description: Şifre değiştirme isteği.
      properties:
        old_password:
          type: string
          writeOnly: true
          minLength: 1
          description: Mevcut şifre
        new_password:
          type: string
          writeOnly: true
          minLength: 1
          description: Yeni şifre
        new_password2:
          type: string
          writeOnly: true
          minLength: 1
          title: Yeni şifre tekrar
          description: Yeni şifre tekrar
      required:
      - new_password
      - new_password2
      - old_password
    LoginInput:
      type: object
      description: Login isteği — kullanıcı adı ve şifre.
      properties:
        username:
          type: string
          description: Kullanıcı adı
      required:
      - username
    LoginInputRequest:
      type: object
      description: Login isteği — kullanıcı adı ve şifre.
      properties:
        username:
          type: string
          minLength: 1
          description: Kullanıcı adı
        password:
          type: string
          writeOnly: true
          minLength: 1
          description: Şifre
      required:
      - password
      - username
    LogoutInput:
      type: object
      description: Logout isteği — refresh token ile çıkış.
      properties:
        refresh_token:
          type: string
          description: JWT refresh token (çıkış için geçersiz kılınacak)
      required:
      - refresh_token
    LogoutInputRequest:
      type: object
      description: Logout isteği — refresh token ile çıkış.
      properties:
        refresh_token:
          type: string
          minLength: 1
          description: JWT refresh token (çıkış için geçersiz kılınacak)
      required:
      - refresh_token
    PaginatedCategoryList:
      type: object
      properties:
        count:
          type: integer
          example: 123
        next:
          type: string
          nullable: true
          format: uri
          example: http://api.example.org/accounts/?page=4
        previous:
          type: string
          nullable: true
          format: uri
          example: http://api.example.org/accounts/?page=2
        results:
          type: array
          items:
            $ref: '#/components/schemas/Category'
    PatchedUserWithProfileRequest:
      type: object
      description: Kullanıcı ve Profil Serializer — Detaylı profil bilgisi ile.
      properties:
        email:
          type: string
          format: email
          nullable: true
          maxLength: 254
        username:
          type: string
          minLength: 1
          description: Required. 150 characters or fewer. Letters, digits and @/./+/-/_
            only.
          pattern: ^[\w.@+-]+$
          maxLength: 150
        first_name:
          type: string
          maxLength: 150
        last_name:
          type: string
          maxLength: 150
        phone_number:
          type: string
          nullable: true
          maxLength: 20
        avatar:
          type: string
          format: binary
          nullable: true
    ProfileUpdateInput:
      type: object
      description: Profil güncelleme isteği — kısmi güncelleme destekler.
      properties:
        first_name:
          type: string
          maxLength: 150
        last_name:
          type: string
          maxLength: 150
        phone_number:
          type: string
          maxLength: 20
        email:
          type: string
          format: email
    ProfileUpdateInputRequest:
      type: object
      description: Profil güncelleme isteği — kısmi güncelleme destekler.
      properties:
        first_name:
          type: string
          maxLength: 150
        last_name:
          type: string
          maxLength: 150
        phone_number:
          type: string
          maxLength: 20
        email:
          type: string
          format: email
    RoleEnum:
      enum:
      - SUPPLIER
      - SELLER
      - DRIVER
      type: string
      description: |-
        * `SUPPLIER` - Tedarikçi
        * `SELLER` - Satıcı
        * `DRIVER` - Sürücü
    UserRegistration:
      type: object
      description: Kullanıcı kayıt isteği — rol bazlı (SUPPLIER, SELLER, DRIVER).
      properties:
        username:
          type: string
          description: Required. 150 characters or fewer. Letters, digits and @/./+/-/_
            only.
          pattern: ^[\w.@+-]+$
          maxLength: 150
        email:
          type: string
          format: email
          nullable: true
          maxLength: 254
        first_name:
          type: string
          maxLength: 150
        last_name:
          type: string
          maxLength: 150
        phone_number:
          type: string
          nullable: true
          maxLength: 20
        role:
          allOf:
          - $ref: '#/components/schemas/RoleEnum'
          description: |-
            Rol: SUPPLIER, SELLER, DRIVER

            * `SUPPLIER` - Tedarikçi
            * `SELLER` - Satıcı
            * `DRIVER` - Sürücü
        company_name:
          type: string
        business_name:
          type: string
        business_type:
          type: string
        license_number:
          type: string
        vehicle_type:
          $ref: '#/components/schemas/VehicleTypeEnum'
        vehicle_plate:
          type: string
        address:
          type: string
        city:
          type: string
      required:
      - role
      - username
    UserRegistrationRequest:
      type: object
      description: Kullanıcı kayıt isteği — rol bazlı (SUPPLIER, SELLER, DRIVER).
      properties:
        username:
          type: string
          minLength: 1
          description: Required. 150 characters or fewer. Letters, digits and @/./+/-/_
            only.
          pattern: ^[\w.@+-]+$
          maxLength: 150
        email:
          type: string
          format: email
          nullable: true
          maxLength: 254
        password:
          type: string
          writeOnly: true
          minLength: 1
          description: Şifre
        password2:
          type: string
          writeOnly: true
          minLength: 1
          title: Şifre tekrar
          description: Şifre tekrar
        first_name:
          type: string
          maxLength: 150
        last_name:
          type: string
          maxLength: 150
        phone_number:
          type: string
          nullable: true
          maxLength: 20
        role:
          allOf:
          - $ref: '#/components/schemas/RoleEnum'
          description: |-
            Rol: SUPPLIER, SELLER, DRIVER

            * `SUPPLIER` - Tedarikçi
            * `SELLER` - Satıcı
            * `DRIVER` - Sürücü
        company_name:
          type: string
        business_name:
          type: string
        business_type:
          type: string
        license_number:
          type: string
        vehicle_type:
          $ref: '#/components/schemas/VehicleTypeEnum'
        vehicle_plate:
          type: string
        address:
          type: string
        city:
          type: string
      required:
      - password
      - password2
      - role
      - username
    UserWithProfile:
      type: object
      description: Kullanıcı ve Profil Serializer — Detaylı profil bilgisi ile.
      properties:
        id:
          type: integer
          readOnly: true
        email:
          type: string
          format: email
          nullable: true
          maxLength: 254
        username:
          type: string
          description: Required. 150 characters or fewer. Letters, digits and @/./+/-/_
            only.
          pattern: ^[\w.@+-]+$
          maxLength: 150
        first_name:
          type: string
          maxLength: 150
        last_name:
          type: string
          maxLength: 150
        phone_number:
          type: string
          nullable: true
          maxLength: 20
        avatar:
          type: string
          format: uri
          nullable: true
        role:
          allOf:
          - $ref: '#/components/schemas/RoleEnum'
          readOnly: true
        role_display:
          type: string
          readOnly: true
        is_verified:
          type: boolean
          readOnly: true
        profile:
          type: object
          additionalProperties: {}
          nullable: true
          readOnly: true
        created_at:
          type: string
          format: date-time
          readOnly: true
      required:
      - created_at
      - id
      - is_verified
      - profile
      - role
      - role_display
      - username
    VehicleTypeEnum:
      enum:
      - MOTORCYCLE
      - CAR
      - VAN
      - TRUCK
      type: string
      description: |-
        * `MOTORCYCLE` - Motosiklet
        * `CAR` - Otomobil
        * `VAN` - Minivan
        * `TRUCK` - Kamyon
  securitySchemes:
    jwtAuth:
      type: http
      scheme: bearer
      bearerFormat: JWT
